{
  "name": "webgame-platform",
  "version": "1.0.0",
  "description": "A platform for uploading and playing web games.",
  "main": "src/app.ts",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "ts-node src/app.ts",
    "client": "cd client && npm run dev",
    "build": "tsc",
    "dev": "ts-node-dev src/app.ts",
    "background": "pm2 delete server || true && pm2 delete client || true && pm2 start src/app.ts --name server --interpreter ts-node && pm2 start npm --name client -- run dev --prefix client"
  },
  "dependencies": {
    "better-sqlite3": "^11.9.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "multer": "^1.4.2",
    "pm2": "^6.0.5",
    "unzipper": "^0.10.11",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.0.7",
    "@types/express": "^4.17.13",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.11.7",
    "@types/unzipper": "^0.10.11",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.9.5"
  },
  "keywords": [
    "web",
    "games",
    "platform"
  ],
  "author": "Your Name",
  "license": "MIT"
}
